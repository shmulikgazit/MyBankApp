<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all app data in cloud backup -->
        <include domain="file" path="." />
        
        <!-- Exclude sensitive LivePerson data from cloud backup -->
        <exclude domain="database" path="liveperson.db" />
        <exclude domain="sharedpref" path="liveperson_prefs.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all app data in device transfer -->
        <include domain="file" path="." />
        
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="database" path="liveperson.db" />
        <exclude domain="sharedpref" path="liveperson_prefs.xml" />
    </device-transfer>
</data-extraction-rules>
